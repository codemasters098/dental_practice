<section class="panel">
    <header class="panel-heading">
            My Sections
    </header>
    <div class="panel-body table-responsive">

      <p id="notice"><%= notice %></p>


<h1>Listing Dentists</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Registered dental no</th>
      <th>Isactive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dentists.each do |dentist| %>
      <tr>
        <td><%= dentist.name %></td>
        <td><%= dentist.email %></td>
        <td><%= dentist.phone_no %></td>
        <td><%= dentist.registered_dental_no %></td>
        <td><%= dentist.isActive %></td>
        <td><%= link_to 'Show', dentist %></td>
        <td><%= link_to 'Edit', edit_dentist_path(dentist) %></td>
        <td><%= link_to 'Destroy', dentist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</section>
<%= link_to 'New Dentist', new_dentist_path %>
